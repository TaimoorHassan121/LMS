@model List<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="content-body">
    <div class="row">

    </div>
    <!-- Zero configuration table -->
    <section id="basic-datatable">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <h1>Role Manager</h1>
                        <h5 class="mr-5 text-info">@TempData["Message"]</h5>
                    </div>
                    <form method="post" asp-action="AddRole" asp-controller="RoleManager">
                        <div class="row">
                            <div class="col-8 ml-5">
                                <div class="input-group">

                                    <input name="roleName" class="form-control" autocomplete="off" placeholder="Enter New Role">
                                    <span class="input-group-btn">
                                        <button class="btn btn-info">Add New Role</button>
                                    </span>
                                </div>

                            </div>

                        </div>
                    </form>
                    <div class="card-body card-dashboard">

                        <div class="table-responsive">
                            <table class="table zero-configuration">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Role</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var role in Model)
                                    {
                                        <tr>
                                            <td>@role.Id</td>
                                            <td>@role.Name</td>
                                        </tr>
                                    }
                                </tbody>


                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--/ Zero configuration table -->

</div>

