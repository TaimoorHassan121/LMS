@model DaewooLMS.Models.Employee

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-body">
    <!-- Basic Vertical form layout section start -->
    <section id="basic-vertical-layouts">
        <div class="row match-height">

            <div class="col-md-12 col-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Add Department</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit" method="post" enctype="multipart/form-data">
                            <div class="form-body">

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="row">
                                    <input type="hidden" asp-for="IdentityUserId" />
                                    <input type="hidden" asp-for="UserId" />
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label>Employee ID</label>
                                            <div class="position-relative has-icon-left">
                                                <input asp-for="Emp_ID" type="number"   class="form-control"   >

                                            </div>
                                            <span asp-validation-for="Emp_ID" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label>Employee Name</label>
                                            <div class="position-relative has-icon-left">
                                                <input asp-for="Emp_Name" type="text" id="first-name-icon" class="form-control" placeholder="Enter Course Type" autocomplete="off" required>

                                            </div>
                                            <span asp-validation-for="Emp_Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label>Designation</label>
                                            <div class="position-relative has-icon-left">
                                                <input asp-for="Designation" type="text" id="first-name-icon" class="form-control" placeholder="Enter Course Type" autocomplete="off" required>

                                            </div>
                                            <span asp-validation-for="Designation" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label>Passward</label>
                                            <div class="position-relative has-icon-left">
                                                <input asp-for="User_Passward" type="text" id="first-name-icon" class="form-control" placeholder="Enter Course Type" autocomplete="off" required>

                                            </div>
                                            <span asp-validation-for="User_Passward" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-6">
                                        <div class="form-group">
                                            <label class="control-label">Department</label>
                                            <select asp-for="DepartmentID" class="form-control" id="Department" onchange="changeDepartment(this)" asp-items="ViewBag.DepartmentID">
                                                <option value="">Select Department</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label class="control-label">Gender</label>
                                            <select asp-for="Gender" class="form-control" id="Department" onchange="changeDepartment(this)">
                                                <option value="Male">Male</option>
                                                <option value="Female">Female</option>
                                            </select>

                                        </div>
                                        <span asp-validation-for="Gender" style="color:Red"></span>
                                    </div>

                                    <div class="col-sm-12 col-md-6">
                                        <fieldset class="form-group">
                                            <label>Profile Pic</label>
                                            <div class="custom-file">
                                                <input asp-for="Emp_Pic" type="file" name="profilepic" class="custom-file-input" id="inputGroupFile01"
                                                       onchange="document.getElementById('FrontImage').src=window.URL.createObjectURL(this.files[0])" />
                                                <label class="custom-file-label" for="inputGroupFile01">@Model.Emp_Pic</label>
                                            </div>
                                            <span asp-validation-for="Emp_Pic" class="text-danger"></span>
                                            <img id="FrontImage" src="~/Images/@Model.Emp_Pic" alt="Employee Image" width="150" height="150"
                                                 style="border:1px;margin-top:-10px;margin-left:120px;" />
                                        </fieldset>
                                    </div>



                                    <div class="col-6">
                                        <div class="form-group">
                                            <label class="control-label">Date</label>
                                            <input asp-for="Emp_Date" type="datetime-local"  class="form-control" />
                                            <span asp-validation-for="Emp_Date" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-sm-12 col-md-6">
                                        <div class="form-group">
                                            <label>Status</label>
                                            <select type="text" asp-for="IsActive" class="select form-control">
                                                <option value="true">Active</option>
                                                <option value="false">Non Active</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <div class="form-group form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" asp-for="Status" value="true" checked />
                                                </label>
                                            </div>
                                            <span asp-validation-for="Status" class="text-danger"></span>
                                        </div>
                                    </div>


                                    <div class="col-12 d-flex justify-content-end">
                                        <input type="submit" value="Update" class="btn btn-primary mr-1" />

                                        <button asp-action="Index" class="btn btn-light-secondary">Back</button>
                                    </div>
                                </div>


                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Basic Vertical form layout section end -->



</div>
<script type="text/javascript">

    document.querySelector('.custom-file-input').addEventListener('change', function (e) {
        var fileName = document.getElementById("inputGroupFile01").files[0].name;
        var nextSibling = e.target.nextElementSibling
        nextSibling.innerText = fileName;
    })
</script>


