<script>
    
    function supportMsg(){
        console.log();
        var empName = document.getElementById('Emp_Name').value;
        var empID = document.getElementById('Emp_ID').value;
        var Sub = document.getElementById('Subject');
        var masg = document.getElementById('Message');
        var Subject = Sub.value;
        var msg = masg.value;

        if (msg == null) {
            return alert("Please Enter Your Message!")
        }

        $.ajax({
            type:'POST',
            url: '/Home/Support?empId=' + empID + '&empName=' + empName + '&sub=' + Subject + '&msg=' + msg,
            success: function (response) {
                Swal.fire('Submitted!', 'Your message has been sent.', 'success');
            },

        });
        Sub.value = "";
        masg.value = "";
    }




</script>                     