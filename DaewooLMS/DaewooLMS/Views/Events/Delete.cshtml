@model DaewooLMS.Models.Events

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="content-header row">
    <div class="content-header-left col-12 mb-2 mt-1">
        <div class="breadcrumbs-top">
            <h5 class="content-header-title float-left pr-1 mb-0">Events</h5>
            <div class="breadcrumb-wrapper d-none d-sm-block">
                <ol class="breadcrumb p-0 mb-0 pl-1">
                    <li class="breadcrumb-item">
                        <a href="index"><i class="bx bx-home-alt"></i></a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="index">Index</a>
                    </li>
                    <li class="breadcrumb-item active">
                        <a>Events</a>
                    </li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content-body">
    <section id="basic-vertical-layouts">
        <div class="row match-height">
            <div class="col-md-12 col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="text-danger text-uppercase">Delete User</h2>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-2">
                               Title
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Event_Title)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Objactive)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Objactive)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Participent)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Participent)
                            </dd>
                            <dt class="col-sm-2">
                                Event Image
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Event_PIC)
                            </dd>
                            <dt class="col-sm-2">
                               Start Date Time
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.start_DateTime)
                            </dd>
                            <dt class="col-sm-2">
                                End Date Time
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.End_DateTime)
                            </dd>
                            <dt class="col-sm-2">
                               Add Date Time
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Add_DateTime)
                            </dd>
                            <dt class="col-sm-2">
                                Status
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.status)
                            </dd>
                        </dl>

                        <form asp-action="Delete">
                            <input type="hidden" asp-for="EventID" />
                            <input type="submit" value="Delete" class="btn btn-danger" /> |
                            <a asp-action="Index">Back to List</a>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </section>
</div>

