@model DaewooLMS.Models.Videos

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-body">
    <!-- Basic Vertical form layout section start -->
    <section id="basic-vertical-layouts">
        <div class="row match-height">

            <div class="col-md-12 col-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Add Videos</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit" method="post" enctype="multipart/form-data">
                            <div class="form-body">

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="row">
                                    <input type="hidden" asp-for="VideoID" />
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label>Video Name</label>
                                            <div class="position-relative has-icon-left">
                                                <input asp-for="Video_Name" type="text" class="form-control" placeholder="Enter Course Name" autocomplete="off" required>

                                            </div>
                                            <span asp-validation-for="Video_Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label>Trade</label>
                                            <div class="position-relative has-icon-left">
                                                <select type="text" asp-for="Trade" class="select form-control" required>
                                                    <option value="">Select Trade PDF</option>
                                                    <option value="TechnicalVideo">Technical Video</option>
                                                    <option value="BehaviouralVideo">Behavioural Video</option>
                                                </select>

                                            </div>
                                            <span asp-validation-for="Trade" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-6">
                                        <div class="form-group">
                                            <label class="control-label">Department</label>
                                            <select asp-for="DepartmentID" class="form-control" id="Department" onchange="changeDepartment(this)" asp-items="ViewBag.DepartmentID">
                                                <option value="">Select Department</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-sm-12 col-md-6">
                                        <fieldset class="form-group">
                                            <label>Profile Pic</label>
                                            <div class="custom-file">
                                                <input asp-for="Video_Link" type="file" name="VideoFile" class="custom-file-input" id="inputGroupFile01"
                                                       onchange="document.getElementById('FrontImage').src=window.URL.createObjectURL(this.files[0])" />
                                                <label class="custom-file-label" for="inputGroupFile01">@Model.Video_Link</label>
                                            </div>
                                            <span asp-validation-for="Video_Link" class="text-danger"></span>

                                        </fieldset>
                                    </div>

                                    <div class="col-6">
                                        <div class="form-group">
                                            <label class="control-label">Date</label>
                                            <input asp-for="Date" type="datetime-local"  class="form-control" />
                                            <span asp-validation-for="Date" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-sm-12 col-md-6">
                                        <div class="form-group">
                                            <label>IsActive</label>
                                            <select type="text" asp-for="IsActive" class="select form-control">
                                                <option value="true">Active</option>
                                                <option value="false">Non Active</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-6">
                                        <div class="form-group">
                                            <div class="form-group form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" asp-for="Status" value="true" checked />
                                                </label>
                                            </div>
                                            <span asp-validation-for="Status" class="text-danger"></span>
                                        </div>
                                    </div>


                                    <div class="col-12 d-flex justify-content-end">
                                        <input type="submit" value="Create" class="btn btn-primary mr-1" />

                                        <button asp-action="Index" class="btn btn-light-secondary">Back</button>
                                    </div>
                                </div>


                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Basic Vertical form layout section end -->



</div>

<script type="text/javascript">
    document.querySelector('.custom-file-input').addEventListener('change', function (e) {
        var fileName = document.getElementById("inputGroupFile01").files[0].name;
        var nextSibling = e.target.nextElementSibling
        nextSibling.innerText = fileName;
    })
</script>

