@model DaewooLMS.Models.Videos

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header row">
    <div class="content-header-left col-12 mb-2 mt-1">
        <div class="breadcrumbs-top">
            <h5 class="content-header-title float-left pr-1 mb-0">Course</h5>
            <div class="breadcrumb-wrapper d-none d-sm-block">
                <ol class="breadcrumb p-0 mb-0 pl-1">
                    <li class="breadcrumb-item">
                        <a href="index"><i class="bx bx-home-alt"></i></a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="index">Index</a>
                    </li>
                    <li class="breadcrumb-item active">
                        <a>Liberary Data </a>
                    </li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content-body">
    <section id="basic-vertical-layouts">
        <div class="row match-height">
            <div class="col-md-12 col-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Liberary </h5>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-2">
                                Video Name
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Video_Name)
                            </dd>
                            <dt class="col-sm-2">
                                Video Link
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Video_Link)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Trade)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Trade)
                            </dd>
                            <dt class="col-sm-2">
                               Department
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Departments.DepartmentName)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.IsActive)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.IsActive)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Status)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Status)
                            </dd>
                            <dt class="col-sm-2">
                                Date
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Date)
                            </dd>
                        </dl>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.VideoID">Edit</a> |
                            <a asp-action="Index">Back to List</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</div>

